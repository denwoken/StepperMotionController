{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "make -j8",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
			"cwd": "${workspaceFolder}",
			"statusbar": {
					"color": "#8bff97",
					"label": "$(code) Build",
					"detail": "Build"
				}
			}
		},



		{
			"label": "Clean",
			"type": "shell",
			"group": "build",
			"command": "make clean",
			"problemMatcher": [],
			"options": {
				"statusbar": {
						"color": "#ff8b8b",
						"label": "$(clear-all) Clean",
						"detail": "Clean ALL"
				}
		}
		},



		{
			"label": "Write firmware",
			"type": "shell",
			"command": "make prog",
			"problemMatcher": []
		}
	]

}