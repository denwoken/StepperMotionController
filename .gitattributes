#####################################################################
# Git LFS: common rule template
#####################################################################

#####################################################################
# Altium / ECAD project sources (binary)
#####################################################################
*.SchDoc   filter=lfs diff=lfs merge=lfs -text
*.PcbDoc   filter=lfs diff=lfs merge=lfs -text
*.PrjPcb   filter=lfs diff=lfs merge=lfs -text
*.PcbLib   filter=lfs diff=lfs merge=lfs -text
*.SchLib   filter=lfs diff=lfs merge=lfs -text
*.SCHLIB   filter=lfs diff=lfs merge=lfs -text
*.IntLib   filter=lfs diff=lfs merge=lfs -text
*.apr      filter=lfs diff=lfs merge=lfs -text

#####################################################################
# Reports / exports
#####################################################################
*.REP      filter=lfs diff=lfs merge=lfs -text
*.EXTREP   filter=lfs diff=lfs merge=lfs -text
*.pdf      filter=lfs diff=lfs merge=lfs -text

#####################################################################
# Gerber / NC Drill (CAM outputs)
# (замена твоего *.G* на безопасные маски)
#####################################################################
# Gerber (RS-274X) — частые расширения
*.gbr      filter=lfs diff=lfs merge=lfs -text
*.GBR      filter=lfs diff=lfs merge=lfs -text
*.ger      filter=lfs diff=lfs merge=lfs -text
*.GER      filter=lfs diff=lfs merge=lfs -text

# Top/Bottom copper / mask / silkscreen / paste (часто встречается)
*.gtl      filter=lfs diff=lfs merge=lfs -text
*.gbl      filter=lfs diff=lfs merge=lfs -text
*.gts      filter=lfs diff=lfs merge=lfs -text
*.gbs      filter=lfs diff=lfs merge=lfs -text
*.gto      filter=lfs diff=lfs merge=lfs -text
*.gbo      filter=lfs diff=lfs merge=lfs -text
*.gpt      filter=lfs diff=lfs merge=lfs -text
*.gpb      filter=lfs diff=lfs merge=lfs -text
*.GTL      filter=lfs diff=lfs merge=lfs -text
*.GBL      filter=lfs diff=lfs merge=lfs -text
*.GTS      filter=lfs diff=lfs merge=lfs -text
*.GBS      filter=lfs diff=lfs merge=lfs -text
*.GTO      filter=lfs diff=lfs merge=lfs -text
*.GBO      filter=lfs diff=lfs merge=lfs -text
*.GPT      filter=lfs diff=lfs merge=lfs -text
*.GPB      filter=lfs diff=lfs merge=lfs -text

# Mechanical / outline / keepout (встречается у фабрик)
*.gko      filter=lfs diff=lfs merge=lfs -text
*.GKO      filter=lfs diff=lfs merge=lfs -text
*.gm1      filter=lfs diff=lfs merge=lfs -text
*.GM1      filter=lfs diff=lfs merge=lfs -text

# NC Drill
*.drl      filter=lfs diff=lfs merge=lfs -text
*.DRL      filter=lfs diff=lfs merge=lfs -text
*.xln      filter=lfs diff=lfs merge=lfs -text
*.XLN      filter=lfs diff=lfs merge=lfs -text

#####################################################################
# Archives / packages
#####################################################################
*.zip      filter=lfs diff=lfs merge=lfs -text
*.ZIP      filter=lfs diff=lfs merge=lfs -text
*.rar      filter=lfs diff=lfs merge=lfs -text
*.RAR      filter=lfs diff=lfs merge=lfs -text

#####################################################################
# Firmware / build artifacts (binary)
#####################################################################
*.elf      filter=lfs diff=lfs merge=lfs -text
*.hex      filter=lfs diff=lfs merge=lfs -text
*.map      filter=lfs diff=lfs merge=lfs -text
*.o        filter=lfs diff=lfs merge=lfs -text
*.d        filter=lfs diff=lfs merge=lfs -text

#####################################################################
# Media assets
#####################################################################
*.jpg      filter=lfs diff=lfs merge=lfs -text
*.jpeg     filter=lfs diff=lfs merge=lfs -text
*.png      filter=lfs diff=lfs merge=lfs -text
*.bmp      filter=lfs diff=lfs merge=lfs -text

#####################################################################
# Office docs
#####################################################################
*.doc      filter=lfs diff=lfs merge=lfs -text
*.docx     filter=lfs diff=lfs merge=lfs -text
*.xlsx     filter=lfs diff=lfs merge=lfs -text
*.pptx     filter=lfs diff=lfs merge=lfs -text

#####################################################################
# (Optional) Altium backups (если ты реально хочешь их в LFS)
#####################################################################
*.mbp      filter=lfs diff=lfs merge=lfs -text
*.mbw      filter=lfs diff=lfs merge=lfs -text
